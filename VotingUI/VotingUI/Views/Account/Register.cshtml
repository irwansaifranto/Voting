@model VotingUI.Models.Account.ModelUserView

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container register">
    <div class="row">
        <div class="col-md-4 register-left">
            <img src="~/Vote-PNG-HD.png" alt="" />
            <h3>Welcome</h3>
            <p>You are 30 seconds away from earning your own money!</p>
            <a href="@Url.Action("Login", "Account")" class="btn btnLogin">Login</a>
        </div>
        <div class="col-md-8 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Form Register</h3>
                    <form asp-action="Register" method="post">
                        <div class="row register-form">
                            <div class="col-md-12">
                                <span class="text-danger">@ViewData["GlobalErrorMessage"]</span>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="First Name *" asp-for="@Model.FirstName" />
                                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Last Name" asp-for="@Model.LastName" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Username *" asp-for="UserName" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Email *" asp-for="@Model.Email" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label asp-for="@Model.Gender">Gender : </label> <br />
                                        @foreach (var gender in Model.Genders)
                                        {
                                            <input type="radio" asp-for="Gender" value="@gender" />@gender<br />
                                        }
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Age *" asp-for="@Model.Age" />
                                    <span asp-validation-for="@Model.Age" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password *" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Confirm Password *" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <input type="submit" class="btnRegister" value="Register" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
